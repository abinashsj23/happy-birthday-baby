<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>For Sivi ‚ù§Ô∏è</title>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

    body {
        margin: 0;
        font-family: Poppins, sans-serif;
        background: #fdeff4;
        color: #333;
        overflow-x: hidden;
    }

    /* PASSWORD SCREEN */
    #lockScreen {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: linear-gradient(135deg,#ffc3d9,#ffeaf2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 20px;
        z-index: 99;
    }
    #lockScreen h1 {
        color: #ff3d7a;
        font-size: 32px;
    }
    #lockScreen input {
        padding: 12px;
        border: 2px solid #ff9abb;
        border-radius: 10px;
        margin-top: 15px;
        width: 230px;
        font-size: 16px;
    }
    #lockScreen button {
        margin-top: 12px;
        background: #ff7aa3;
        border: none;
        padding: 12px 20px;
        border-radius: 12px;
        color: white;
        cursor: pointer;
        font-size: 16px;
        transition: .2s;
    }
    #lockScreen button:hover { transform: scale(1.05); }

    /* POPUP */
    #popup {
        position: fixed;
        top: 50%; left: 50%;
        transform: translate(-50%, -50%);
        background: #ffe6f0;
        padding: 30px;
        width: 80%;
        max-width: 350px;
        border-radius: 18px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        z-index: 100;
        display: none;
        animation: fadeIn .6s ease;
    }
    #popup h2 { color: #ff3d7a; }
    #popup button {
        background: #ff7aa3;
        border: none;
        padding: 10px 18px;
        margin-top: 15px;
        border-radius: 10px;
        color: white;
        cursor: pointer;
        font-size: 15px;
    }
    @keyframes fadeIn {
        from {opacity:0; transform:translate(-50%,-60%);}
        to {opacity:1; transform:translate(-50%,-50%);}
    }

    /* CAKE */
    #cakeContainer {
        display: none;
        text-align: center;
        margin-top: 20px;
        animation: fadeInCake 1s ease;
    }

    @keyframes fadeInCake {
        from {opacity:0; transform: scale(0.8);}
        to {opacity:1; transform: scale(1);}
    }

    .cake {
        margin: auto;
        width: 180px;
        height: 120px;
        background: #ffbdd4;
        border-radius: 10px;
        position: relative;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .cake:before {
        content: "";
        position: absolute;
        top: -35px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 35px;
        background: #fff1f7;
        border-radius: 8px 8px 0 0;
    }

    /* CANDLES */
    .candle {
        position: absolute;
        top: -45px;
        left: 50%;
        transform: translateX(-50%);
        width: 6px;
        height: 30px;
        background: #ff8eb6;
        border-radius: 3px;
    }

    /* FLAME */
    .flame {
        position: absolute;
        top: -55px;
        left: 50%;
        transform: translateX(-50%);
        width: 12px;
        height: 18px;
        background: radial-gradient(circle, #ffd27f 40%, #ff9f32 60%, #ff7b00 90%);
        border-radius: 50%;
        animation: flicker .13s infinite alternate;
    }

    @keyframes flicker {
        from { transform: translateX(-50%) scale(1); opacity: 1; }
        to { transform: translateX(-50%) scale(1.15); opacity: 0.85; }
    }

    /* HEARTS */
    .heart {
        position: fixed;
        top: -10px;
        color: #ff6fa8;
        font-size: 20px;
        animation: float 4s linear infinite;
        opacity: 0.7;
    }
    @keyframes float {
        0% {transform: translateY(0) rotate(0deg); opacity: 1;}
        100% {transform: translateY(100vh) rotate(360deg); opacity: 0;}
    }

    /* CONFETTI */
    .confetti {
        position: fixed;
        top: -10px;
        font-size: 14px;
        animation: confetti-fall 3s linear infinite;
    }
    @keyframes confetti-fall {
        0% {transform: translateY(0);}
        100% {transform: translateY(100vh);}
    }

</style>
</head>

<body>

<!-- POPUP -->
<div id="popup">
    <h2>Happy Birthday Baby ‚ù§Ô∏è</h2>
    <p>Love you, Sivi.</p>
    <button onclick="closePopup()">Close</button>
</div>

<!-- PASSWORD SCREEN -->
<div id="lockScreen">
    <h1>For My Princess, Sivi ‚ù§Ô∏è</h1>
    <p>Enter your password, baby.</p>
    <input type="password" id="pass" placeholder="Password">
    <button onclick="unlock()">Open</button>
    <p id="wrong" style="color:red; display:none;">Wrong password, sweetie.</p>
</div>

<!-- FLOATING HEARTS -->
<script>
for(let i=0;i<18;i++){
    let h=document.createElement("div");
    h.className="heart";
    h.style.left=Math.random()*100+"vw";
    h.style.animationDuration=(3+Math.random()*3)+"s";
    h.innerHTML="‚ù§";
    document.body.appendChild(h);
}
</script>

<!-- CAKE -->
<div id="cakeContainer">
    <div class="cake">
        <div class="flame"></div>
        <div class="candle"></div>
    </div>
    <p style="font-size:18px; margin-top:10px; color:#ff3d7a;">
        üéÇ Make a wish, princess ‚ù§Ô∏è
    </p>
</div>

<!-- MAIN CONTENT (your page continues here) -->
<div id="mainPage" style="display:none;">
    <!-- You can keep all your previous hero, cards, hugs, etc -->
</div>

<script>
let birthdaySong = new Audio("YOUR_AUDIO_LINK_HERE.mp3"); // replace this later

function unlock(){
    let p = document.getElementById("pass").value;
    if(p === "sivi19"){
        document.getElementById("lockScreen").style.display="none";
        showPopup();
        dropConfetti();
    } else {
        document.getElementById("wrong").style.display="block";
    }
}

function showPopup(){
    document.getElementById("popup").style.display="block";
}

function closePopup(){
    document.getElementById("popup").style.display="none";
    document.getElementById("mainPage").style.display="block";
    document.getElementById("cakeContainer").style.display="block";
    birthdaySong.play();
}

function dropConfetti(){
    for(let i=0;i<30;i++){
        let c=document.createElement("div");
        c.className="confetti";
        c.innerHTML="üéâ";
        c.style.left=Math.random()*100+"vw";
        document.body.appendChild(c);
        setTimeout(()=>c.remove(),3000);
    }
}
</script>

</body>
</html>
